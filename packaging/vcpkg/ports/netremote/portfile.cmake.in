
# Note: this file is not used within the project. It exists here for when the vcpkg port for netremote needs to be updated,
# for example, upon new releases, and will automatically be updated with the latest release version/tag.

vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO microsoft/netremote
    REF v@VERSION_MAJOR@.@VERSION_MINOR@.@VERSION_PATCH@
    SHA512 76379b5d58426748558b4e13605c8f2f62797ce885ef551c93cd3241166961bc8a1bb7f1d21547cf519f4327d953f6ce8617fd69100ad2b7895c16a2096bc53f
    HEAD_REF develop
)

vcpkg_from_git(
    OUT_SOURCE_PATH SOURCE_PATH
    URL @VCPKG_GIT_URL@
    REF @VCPKG_GIT_REF@
    FETCH_REF @VCPKG_GIT_REF_FETCH@
)

vcpkg_find_acquire_program(
    GIT
)

vcpkg_check_features(
    OUT_FEATURE_OPTIONS FEATURE_OPTIONS
    INVERTED_FEATURES
        protocol NETREMOTE_EXCLUDE_PROTOCOL
        server NETREMOTE_EXCLUDE_SERVER
        tests NETREMOTE_EXCLUDE_TESTS
        tools NETREMOTE_EXCLUDE_TOOLS
)

vcpkg_cmake_configure(
    SOURCE_PATH ${SOURCE_PATH}
    OPTIONS
        ${FEATURE_OPTIONS}
)

vcpkg_cmake_install()
vcpkg_copy_pdbs()
vcpkg_cmake_config_fixup(
    CONFIG_PATH lib/cmake/netremote
)

file(REMOVE_RECURSE 
    "${CURRENT_PACKAGES_DIR}/bin"
    "${CURRENT_PACKAGES_DIR}/debug/bin"
    "${CURRENT_PACKAGES_DIR}/debug/include"
)

file(INSTALL "${SOURCE_PATH}/LICENSE" DESTINATION "${CURRENT_PACKAGES_DIR}/share/${PORT}" RENAME copyright)