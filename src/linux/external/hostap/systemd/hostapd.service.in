[Unit]
Description=Hostapd Daemon

[Service]
Type=forking
Restart=on-failure
ExecStart=${CMAKE_INSTALL_FULL_SBINDIR}/hostapd -B -P ${CMAKE_INSTALL_FULL_RUNSTATEDIR}/hostapd/hostapd.pid -i wlan0 ${CMAKE_INSTALL_FULL_SYSCONFDIR}/hostapd/hostapd.conf
PIDFile=${CMAKE_INSTALL_FULL_RUNSTATEDIR}/hostapd/hostapd.pid

[Install]
WantedBy=default.target
